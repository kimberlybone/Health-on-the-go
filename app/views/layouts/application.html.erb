<!DOCTYPE html>
<html>
  <head>
    <title>HealthOnTheGo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">

  </head>

    <!-- <li><a href="/user">Home page</a> -->
    <!-- <li><a href="/events//edit ">Edit</a> -->
    <!-- <li><a href=" /events/ ">My Info</a> -->
    <!-- <li><a href="/events/new">Create New Event</a> -->
      <!-- <li><a href=" /event_repos/ " >Event repo</a> -->


  <body>
    <h1 style="color: white"> Health On The Go</h1>

    <% if !@logged_in_user %>
    <h2>Welcome to our app where you can keep track of your health and many other things...</h2>
    <% end %>

    <% if @logged_in_user %>
      <nav>
    <%# <%= link_to "My Stuff", user_path %> %>
    <%# <%= link_to "Edit Profile Info", edit_user_path %> %>
    <%= link_to "Events", events_path %>
    <%= link_to "Recipes", recipes_path %>
    <%= link_to "Exercise Videos", videos_path %>
    <%= link_to "Create a User Repo", new_user_repo_path %>
    <%= link_to "Reminders", reminders_path %>


    <%= form_tag logout_path, method: :delete do %>
      <%= button_tag  "Logout" %>
    <% end %>
    </nav>

      Logged in as <%= @logged_in_user.username %>
      <% elsif @logged_in_user.nil? %>
        <% "/login/new" %>
        <%= link_to "Log in", new_login_path %>
        <%= link_to "Sign up", new_user_path %>
      <% end %>

      <% if @notification %>
        <p class="message">
          <%= @notification %>
        </p>
      <% end %>

      <% if @errors && @errors.any? %>
      <ul class="errors">
        <% @errors.each do |error| %>
        <li>
          <%= error %>
        </li>
        <% end %>
      </ul>
      <% end %>

    <%= yield %>
  </body>
</html>
